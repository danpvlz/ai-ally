---
import { twMerge } from "tailwind-merge";

interface Props {
    className?: string;
}

const { className = '' } = Astro.props
---


<button class={twMerge("bg-primary px-10 rounded-full py-3 shadow-sm text-black font-medium flex items-center gap-3 hover:brightness-90 transition-all duration-150",className)}>
    <slot />
</button>